{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">User Management</h1>

    {# Flash-сообщения #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Панель инструментов с кнопками #}
    <form method="post" action="{{ path('admin_users_action') }}">
        <div class="d-flex flex-wrap mb-4 gap-2 justify-content-start">
            <button type="submit" name="action" value="block" class="btn btn-warning" data-bs-toggle="tooltip" title="Block selected users">
                <i class="bi bi-lock-fill"></i> Block
            </button>
            <button type="submit" name="action" value="unblock" class="btn btn-success" data-bs-toggle="tooltip" title="Unblock selected users">
                <i class="bi bi-unlock-fill"></i> Unblock
            </button>
            <button type="submit" name="action" value="delete" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete selected users">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
            <button type="submit" name="action" value="deleteUnverified" class="btn btn-secondary" data-bs-toggle="tooltip" title="Delete only unverified users">
                <i class="bi bi-person-x-fill"></i> Delete Unverified
            </button>
        </div>

        {# Таблица пользователей #}
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th scope="col"><input type="checkbox" id="select-all"></th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Last Login</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="{{ user.status == 'blocked' ? 'table-danger' : (user.status == 'unverified' ? 'table-warning' : '') }}">
                            <td><input type="checkbox" name="users_ids[]" value="{{ user.id }}"></td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i') : 'Never' }}</td>
                            <td>{{ user.status|capitalize }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No users found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>

{# JS для select all и tooltip #}
<script>
    document.getElementById('select-all').addEventListener('change', function() {
        document.querySelectorAll('input[name="users_ids[]"]').forEach(cb => cb.checked = this.checked);
    });

    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    tooltipTriggerList.map(function(el) {
        return new bootstrap.Tooltip(el)
    });
</script>
{% endblock %}