{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="w-100" style="max-width: 420px;">

        <h2 class="mb-4 text-center">Welcome Back</h2>
        <p class="text-center text-muted mb-4">Sign in to access your dashboard</p>

        {% if error %}
            <div class="alert alert-danger text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">

            <div class="mb-3 input-group">
                <input
                    type="email"
                    value="{{ last_username }}"
                    name="_username"
                    id="username"
                    class="form-control"
                    placeholder="Email"
                    autocomplete="email"
                    required
                    autofocus
                >
                <span class="input-group-text">
                    <i class="fa fa-envelope"></i>
                </span>
            </div>

            <div class="mb-3 input-group">
                <input
                    type="password"
                    name="_password"
                    id="password"
                    class="form-control"
                    placeholder="Password"
                    autocomplete="current-password"
                    required
                >
                <span class="input-group-text">
                    <i class="fa fa-eye"></i>
                </span>
            </div>

            <div class="d-grid mt-4">
                <button class="btn btn-primary py-2" type="submit">
                    Sign In
                </button>
            </div>
        </form>

        <p class="mt-3 text-center">
            <a href="{{ path('app_register') }}">Don't have an account? Register</a>
        </p>
    </div>
</div>
{% endblock %}
